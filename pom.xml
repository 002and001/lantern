    <profile>
      <id>32bit</id>
      <activation>
        <property>
          <name>sun.arch.data.model</name>
          <value>32</value>
        </property>
      </activation>
      <properties>
        <swt.artifactId>x86</swt.artifactId>
      </properties>
    </profile>
    
    <profile>
      <id>64bit</id>
