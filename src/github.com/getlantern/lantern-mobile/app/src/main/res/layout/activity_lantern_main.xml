<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/settings_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:clickable="true"
        android:adjustViewBounds="true"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:src="@drawable/menu" />
    </RelativeLayout>

    <!-- The main content view -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" 
        android:layout_width="match_parent"
        android:layout_height="fill_parent" 
        android:id="@+id/mainView"
        android:gravity="center"
        tools:context=".LanternMainActivity">

        <ToggleButton
            android:id="@+id/powerLantern"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"   
            android:background="@drawable/toggle_switch"
            android:layout_marginLeft="117dp"
            android:layout_marginTop="140dp"
            android:layout_gravity="center"
            android:checked="false"
            android:text="ToggleButton"
            android:textOff=""
            android:textOn="" />

        <LinearLayout android:orientation="vertical"
            android:background="@color/cyan"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="bottom"
            android:layout_weight="1"
            android:layout_height="256dp"
            android:layout_width="match_parent">

            <RelativeLayout 
                android:id="@+id/lantern_pro"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="selectPro"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="13dp"
                    android:src="@drawable/speed"/>

                <LinearLayout android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    android:gravity="bottom"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:paddingLeft="90dp"    
                    android:layout_height="wrap_content" 
                    android:layout_width="wrap_content">

                    <TextView
                        android:id="@+id/lantern_pro_header"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="5dp"
                        android:text="@string/lantern_pro"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:alpha=".87"
                        android:textColor="@color/accent_white"/>

                    <TextView
                        android:id="@+id/pro_desc"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/pro_desc"
                        android:textSize="14sp"
                        android:alpha=".54"
                        android:textColor="@color/accent_white"/>

                </LinearLayout>


            </RelativeLayout>

            <View
                android:id="@+id/separator"
                android:background="@color/edittext_color"
                android:layout_below="@+id/lantern_pro"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                android:alpha=".54"
                android:layout_centerVertical ="true"
                android:layout_alignParentTop="true"
                />

            <RelativeLayout 
                android:id="@+id/invite_friends"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="selectPro"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/present"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="13dp"
                    android:src="@drawable/present"/>


 
                <LinearLayout android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    android:gravity="bottom"
                    android:paddingLeft="120dp"    
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                    <TextView
                        android:id="@+id/lantern_pro_header"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="5dp"
                        android:text="@string/invite_friends_header"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:alpha=".87"
                        android:textColor="@color/accent_white"/>

                    <TextView
                        android:id="@+id/free_month"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/free_month"
                        android:textSize="14sp"
                        android:alpha=".54"
                        android:textColor="@color/accent_white"/>
                </LinearLayout>           
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <!-- The navigation drawer -->
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:elevation="7.5dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:id="@+id/drawerPane"
        android:layout_gravity="start">

        <!-- Profile Box -->
        <RelativeLayout
            android:id="@+id/profileBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nav_background"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:padding="8dp" >
            <ImageView
                android:id="@+id/avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/avatar"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="14dp"
                    android:gravity="center_horizontal"
                    android:paddingLeft="16dp"
                    android:text="Lantern"
                    android:textSize="15sp"
                    android:textColor="#fff"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
        <!-- List of Actions (pages) -->
        <ListView
            android:id="@+id/navList"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/profileBox"
            android:choiceMode="singleChoice"
            android:background="#ffffffff" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" >
           <TextView
                    android:id="@+id/versionNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="Roboto Regular"
                    android:gravity="bottom|center_horizontal"
                    android:paddingBottom="5dp"
                    android:text=""
                    android:textSize="10sp"
                    android:textColor="#767676"
                    android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
