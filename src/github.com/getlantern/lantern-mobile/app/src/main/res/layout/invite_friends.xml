<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:baselineAligned="false"
    android:id="@+id/inviteView"
    tools:context=".InviteActivity">

    <RelativeLayout
        android:id="@+id/navInvite"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/pro_blue_color"
        android:paddingTop="15dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/inviteAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/inviteAvatar"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/inviteHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginTop="14dp"
                android:paddingLeft="10dp"
                android:text="@string/get_free_months"
                android:textSize="15sp"
                android:textColor="#fff"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/credits_left"
        android:layout_width="fill_parent"
        android:layout_height="262dp"
        android:layout_weight="1"
        android:background="@color/pro_blue_color"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/invite_friends"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/invite_friends"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/invite_bottom_sheet"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#F4F6F6"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_weight="1"
        android:padding="8dp">


        <LinearLayout
            android:id="@+id/get_code_view"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/get_code_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="14dp"
                android:text="@string/invite_friends"
                android:textSize="14sp"
                android:textStyle="bold"
                android:alpha=".87"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/proEmailAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif" 
                android:background="@null"
                android:hint="@string/email_hint"
                android:gravity="fill_horizontal"
                android:ems="10"
                android:textColor="#BDBDBD"
                android:autoText="false"
                android:layout_marginLeft="-5dp"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:inputType="textEmailAddress" />

            <View
                android:id="@+id/separator"
                android:background="@color/edittext_color"
                android:layout_below="@+id/sendEmail"
                android:layout_width = "262dp"
                android:layout_height="1dip"
                android:gravity="center"
                android:layout_centerVertical ="true"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:id="@+id/enter_your_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="14dp"
                android:text="@string/enter_your_email"
                android:textSize="14sp"
                android:textStyle="bold"
                android:alpha=".87"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/previous_code"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginTop="14dp"
                android:text="@string/previous_code"
                android:textSize="12sp"
                android:alpha=".54"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="#000000"/>         


            <Button
                android:id="@+id/getCodeBtn"
                android:layout_height="36dp"
                android:layout_width="216dp"
                android:text="@string/get_code"
                android:fontFamily="sans-serif-medium" 
                android:textSize="14sp"
                android:elevation="2dp"
                android:minHeight="48dp"
                android:textAllCaps="true"
                android:textColor="@color/accent_white"
                android:textStyle="bold"
                android:clickable = "true"
                android:layout_marginTop="10dp"
                android:background="#0297A7"
                android:layout_centerInParent="true"/>

        </LinearLayout>

        <LinearLayout 
            android:id="@+id/referral_code_view"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:visibility="invisible"                 
            android:layout_height="wrap_content">

         <TextView
            android:id="@+id/invite_friends_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="14dp"
            android:text="@string/invite_friends"
            android:textSize="14sp"
            android:textStyle="bold"
            android:alpha=".87"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/your_referral_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif"
            android:text="@string/your_referral_code"
            android:textAllCaps="true"       
            android:textSize="14sp"
            android:alpha=".87"
            android:gravity="center"
            android:textColor="#000000"/>          

        <TextView
            android:id="@+id/referral_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_below="@id/your_referral_code"
            android:fontFamily="sans-serif"
            android:text="LRC5TWCX5"
            android:textAllCaps="true"       
            android:textSize="14sp"
            android:alpha=".87"
            android:gravity="center"   
            android:textColor="@color/pro_blue_color"
            />


        
            <Button
                android:id="@+id/textInviteBtn"
                android:layout_height="36dp"
                android:layout_width="216dp"
                android:text="@string/text_invite"
                android:fontFamily="sans-serif-medium" 
                android:textSize="14sp"
                android:elevation="2dp"
                android:minHeight="48dp"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textStyle="bold"     
                android:clickable = "true"
                android:background="#B6E3EB"
                android:layout_centerInParent="true"
                android:onClick="inviteFriends" />

            <Button
                android:id="@+id/emailInviteBtn"
                android:layout_height="36dp"
                android:layout_width="216dp"
                android:text="@string/email_invite"
                android:fontFamily="sans-serif-medium" 
                android:textSize="14sp"
                android:elevation="2dp"
                android:minHeight="48dp"
                android:textAllCaps="true"
                android:textColor="@color/accent_white"
                android:textStyle="bold"
                android:clickable = "true"
                android:layout_marginTop="10dp"
                android:background="#0297A7"
                android:layout_centerInParent="true"
                android:onClick="continueToPro" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
